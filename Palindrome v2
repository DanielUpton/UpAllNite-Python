                        # palindrome() v2 / succinct
def palindrome(str0):   
    '''
        Explanation is in palindrome() v1 notess
    '''
    str3 = ''.join(str0.split()).lower()   # Combined v1's str1 - 3 lines into one line.
    str4 = str3[::-1]

    print(f'Underlying Forward string: {str3}')
    print(f'Underlying Reverse string: {str4}','\n'*2)
    if str3==str4:
        print('Palindrome')
    else:
        print('Not a Palindrome')
palindrome('Was it a car or a cat I saw')
